{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/scripts/claude/sessionstart.sh"
          }
        ]
      },
      {
        "matcher": "resume",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/scripts/claude/sessionstart.sh"
          }
        ]
      },
      {
        "matcher": "clear",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/scripts/claude/sessionstart.sh"
          }
        ]
      },
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/scripts/claude/sessionstart.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(github.com)",
      "WebFetch(*.github.com)",
      "WebFetch(github.io)",
      "WebFetch(*.github.io)",
      "WebFetch(docs.github.com)",
      "WebFetch(github.blog)",
      "WebFetch(anthropic.com)",
      "WebFetch(*.anthropic.com)",
      "WebFetch(claude.com)",
      "WebFetch(*.claude.com)",
      "WebFetch(claude.ai)",
      "WebFetch(*.claude.ai)",
      "WebFetch(code.claude.com)",
      "WebFetch(react.dev)",
      "WebFetch(*.react.dev)",
      "WebFetch(developer.mozilla.org)",
      "WebFetch(*.mozilla.org)",
      "WebFetch(nodejs.org)",
      "WebFetch(*.nodejs.org)",
      "WebFetch(npmjs.com)",
      "WebFetch(*.npmjs.com)",
      "WebFetch(vitejs.dev)",
      "WebFetch(*.vitejs.dev)",
      "WebFetch(vitest.dev)",
      "WebFetch(*.vitest.dev)",
      "WebFetch(typescript.org)",
      "WebFetch(*.typescriptlang.org)",
      "WebFetch(eslint.org)",
      "WebFetch(*.eslint.org)",
      "WebFetch(prettier.io)",
      "WebFetch(recharts.org)",
      "WebFetch(*.recharts.org)",
      "WebFetch(testing-library.com)",
      "WebFetch(*.testing-library.com)",
      "WebFetch(json-schema.org)",
      "WebFetch(schemastore.org)",
      "WebFetch(*.schemastore.org)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "TodoWrite",
      "Task",
      "WebFetch",
      "NotebookEdit",
      "Skill",
      "Bash(npm run:*)",
      "Bash(npm ci:*)",
      "Bash(npm install:*)",
      "Bash(npm test:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run format:*)",
      "Bash(npm run build:*)",
      "Bash(npx:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git show:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git checkout:*)",
      "Bash(git stash:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git remote:*)",
      "Bash(git rev-parse:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(echo:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(chmod:*)",
      "Bash(ln:*)",
      "Bash(node:*)",
      "Bash(tsc:*)",
      "Bash(vitest:*)"
    ],
    "ask": [
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash",
      "KillShell",
      "TaskOutput"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(secrets/**)",
      "Read(**/*credentials*)",
      "Read(**/*secret*)"
    ]
  },
  "enabledPlugins": {
    "code-review@anthropics": true
  }
}
